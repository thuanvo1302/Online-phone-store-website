<body class=" ">
    <!-- loader Start -->
    <div id="loading">
        <div id="loading-center">
        </div>
    </div>
    <!-- loader END -->

    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Sign In</h2>
                                            <p>Login to stay connected.</p>
                                            <form id="form-signin">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input class="floating-input form-control" type="email"
                                                                placeholder=" " name="email" required>
                                                            <label>Email</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12">
                                                        <div class="floating-label form-group">
                                                            <input class="floating-input form-control" type="password"
                                                                placeholder=" " name="pass" required>
                                                            <label>Password</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <div class="custom-control custom-checkbox mb-3">
                                                            <input type="checkbox" class="custom-control-input"
                                                                id="customCheck1">
                                                            <label class="custom-control-label control-label-1"
                                                                for="customCheck1">Remember Me</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-6">
                                                        <a href="auth-recoverpw.html" class="text-primary float-right">
                                                            Forgot Password?</a>
                                                    </div>
                                                </div>
                                                <div id="liveAlertPlaceholder"></div>
                                                <button type="submit" class="btn btn-primary" id="liveAlertBtn">Sign
                                                    In</button>
                                                <p class="mt-3">
                                                    Create an Account <a href="auth-sign-up.html"
                                                        class="text-primary">Sign Up</a>
                                                </p>
                                            </form>
                                            <script>
                                                const alertPlaceholder = document.getElementById('liveAlertPlaceholder')
                                                const appendAlert = (message, type) => {
                                                    const wrapper = document.createElement('div')
                                                    if (type == 'success') {
                                                        wrapper.innerHTML = [
                                                            `<svg xmlns="http://www.w3.org/2000/svg" class="d-none">
                                                            <symbol id="info-fill" viewBox="0 0 16 16">
                                                                <path
                                                                    d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                                                            </symbol>
                                                        </svg>
                                                        <div class="alert alert-success d-flex align-items-center fade show" role="alert">
                                                            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Info:" width="15px" height="15px"><use xlink:href="#info-fill"/></svg>
                                                            <div>
                                                                ${message}
                                                            </div>
                                                        </div>`
                                                        ].join('')
                                                    }
                                                    else if (type == 'failed') {
                                                        wrapper.innerHTML = [
                                                            `<svg xmlns="http://www.w3.org/2000/svg" class="d-none">
                                                            <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
                                                                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                                                            </symbol>
                                                        </svg>
                                                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                                                            <svg class="bi flex-shrink-0 me-2" role="img" aria-label="Danger:" width="15px" height="15px"><use xlink:href="#exclamation-triangle-fill"/></svg>
                                                            <div>
                                                                ${message}
                                                            </div>
                                                        </div>`
                                                        ].join('')
                                                    }
                                                    else {
                                                        alertPlaceholder.textContent = ''
                                                    }

                                                    alertPlaceholder.append(wrapper)
                                                }

                                                const alertTrigger = document.getElementById('liveAlertBtn')

                                                $('#form-signin').on('submit', (e) => {
                                                    e.preventDefault()

                                                    var formData = new FormData(e.target)
                                                    var data = {}
                                                    formData.forEach((value, key) => data[key] = value)

                                                    axios({ method: 'post', url: '/users/signin', data })
                                                        .then((res) => {
                                                            if (alertTrigger) {
                                                                appendAlert('', 'undefined')
                                                                appendAlert(res.data.message, 'success')
                                                            }
                                                            setTimeout(() => {
                                                                window.location = '/'
                                                            }, 2000)
                                                        })
                                                        .catch(error => {
                                                            if (alertTrigger) {
                                                                appendAlert('', 'undefined')
                                                                appendAlert(error.response.data.message, 'failed')
                                                            }
                                                        })
                                                })
                                            </script>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="/images/login/01.png" class="img-fluid image-right" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>