    <section class="header-main">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-3">
                    <div class="brand-wrap">
                    </div>
                </div>
                <div class="col-lg-12 col-sm-12">
                    <form action="#" class="search-wrap" id="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" id="nameProduct" />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                    <form class="mt-2" id="formSearchBarcode">
                        <div class="input-group">
                            <input type="file" class="form-control" placeholder="SearchBarcode" id="barcode"
                                accept="image/*" />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
